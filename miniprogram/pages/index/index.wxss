/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.view-hint {
  background: #fdd868;
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 80rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding-bottom: 30rpx;
}

.memo-list {
  margin: 16rpx 24rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  align-items: flex-start;
}

.memo {
  width: 200rpx;
  height: 200rpx;
  margin: 10rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
}